<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .container-fluid{
    padding: 5rem 20rem 10rem 20rem;
}
.header{
    margin-bottom: 30px;
    display: flex;
    justify-content: space-between;
}

hr:not([size]){
    height: 6px;
}

.invoice{
    text-align: center;
    border-style: solid;
    border-width: thin;
    margin-top: 30px;
    margin-bottom: 0px;
    padding: 8px;
}

.table1{
    border-style: solid;
    border-width: thin;
    margin-left: 5px;
}
.table2{
    border-style: solid none;
    border-width: thin;
}



table {
    border:1px solid black;
    width: 100%;
  }

  th,td{
    border:1px solid black;
     }

  .gst{
      border: none;
  }
.bank{
    display: flex;
}

  .invoicecontent{
      display: flex;
      justify-content: space-between;
  }


 
  .payment{
      width: 50%;
      padding: 20px;
      border-bottom: solid;
      border-width: thin;
      border-top: none;
      border-left: none;
  }

  .thank{
      color: coral;
      text-align: center;
      padding: 10px;
  }
  .tableflex{
    border: none;
  }
  .invoice1{
      padding: 20px 20px 20px 15px;
      border-right: solid;
      border-bottom: solid;
      border-width: thin;
  }
  .invoice2{
      padding: 20px 20px 20px 15px;
      border-right: solid;
      border-width: thin;
  }
  .invoice3{
      width: 50%;
      padding-left: 20px;
  }
 
  table.description td, th {
    padding: 10px 10px 10px 16px;
 }
    </style>
</head>
<body>
    <div class="container-fluid ">
        <div class='table1'>
            <div>
                <table  class="tableflex"> 
                    <tr>
                      <th  class="tableflex"><img src="https://customerinvoice.s3.ap-southeast-1.amazonaws.com/logo.jpg" width="200" height="200" alt="ICON">
                      </th>                      
                      <th class="tableflex text-end p-4">
                        <h5>B 104, Pasha Court,</h5>
                        <h5>6-3-680, Somajiguda,</h5>
                        <h5>Hyderabad 500082.</h5>
                        <h5 class="mt-2">+91 9949509933</h5>
                        <h5 class="mt-2">www.jackfruitsolutions.com</h5> 
                      </th>
                    </tr>
                </table>
                <!-- Stack the columns on mobile by making one full-width and the other half-width -->
                  
        </div>
      
        <div>
        <h3 class='invoice table2'>Invoice</h3>
        <div class='invoicecontent'>           
            <table class="tableflex">                
                <tr class="tableflex">
                <td class="tableflex invoice1">
                    <h5>PO No: <%= invDetails.ponumber %></h5>
                    <h5>PO Date: <%= invDetails.podate %></h5>
                </td>
                  <td  class="tableflex invoice3" >
                    <h5>Invoice No: <%= invDetails.invoicenumber %></h5>
                    <h5>Invoice Date: <%= invDetails.invoicedate %></h5>
                    <h5>Bill To: <%= invDetails.compdtls.firstname %> <%= invDetails.compdtls.lastname %></h5>
                    <h5>Address: <%= invDetails.compdtls.address1 %>, <%= invDetails.compdtls.city %>,<%= invDetails.compdtls.state %> <%= invDetails.compdtls.zipcode %>.</h5>
                    <h5>GSTIN: 36AACCP0735G1ZO</h5>
                  </td>             
                </tr>
                <tr class="tableflex">
                  <td  class="tableflex invoice2">
                    <h5>CIN # : U72900TG2018PTC129341</h5>
                    <h5>PAN # : AAECJ4298A</h5>
                    <h5>GST # : 36AAECJ4298A1ZM</h5>
                  </td>               
                </tr>
              </table>    
                        
        </div>
        
        <table class="description">
            <tbody>
                
            <tr>
                <th>DESCRIPTION</th>
                <th>HOURS</th>
                <th>RATE/HR</th>
                <th>AMOUNT IN RUPEES</th>
            </tr>
            <% invDetails.invoiceDetails.forEach(inv => {%>
                <tr>
                <td><%= inv.description %></td>
                <td><%= inv.totalhours %></td>
                <td><%= inv.hourlyrate %></td>
                <td><%= inv.totalamount.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,') %></td>
            </tr>  
            <%	});%>
            <tr>
                <td class='gst'>GST @<%= gstpercent %>%</td>
                <td class='gst'></td>
                <td class='gst'></td>
                <td><%= totalcgst %></td>
            </tr>  
            <% if (totalsgst>0 ) { %> 
            <tr>
                <td class='gst'>SGST @<%= gstpercent %>%</td>
                <td class='gst'></td>
                <td class='gst'></td>
                <td><%= totalsgst %></td>
            </tr>  
            <% } %>
            <tr>
                <td class='gst'>TOTAL (<%= words %> only)</td>
                <td class='gst'></td>
                <td class='gst'></td>
                <td><%= grtotal %></td>
            </tr> 
            </tbody>             
        </table>
    
        </div>
        <div class='tableflex'>
            <table class='tableflex'>
                <tr class='tableflex'>
                  <td class='tableflex invoice1'>
                    <h4><b>Bank Details</b></h4>
                    <h5>Name - Jackfruittree Solutions Private Limited</h5>
                    <h5>Bank Name - ICICI Bank</h5>
                    <h5>Account Number - 410805000147</h5>
                    <h5>IFSC Code - ICIC0004108</h5>
                    <h5>Type â€“ Current A/C</h5>
                  </td>
                  <td class=' payment'>
                    <h4><b>Payment Terms</b></h4>
                    <h5>100% on receipt of invoice.</h5>
                  </td>                
                </tr>
              </table>
          
          
        </div>
        <div class='thank'>
            <h5>We thank you for your business!</h5>
        </div>
    </div>
        <div class='pt-2'>
            <h5>Sincerely,</h5>
            <h5>Soujanya Venkatesh</h5>
            <h5>(Director)</h5>
        </div>    
    </div>
</body>
</html>